<%- include('partials/header'); -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" name="postTitle" class="form-control" id="" autofocus autocomplete="off">
        </div>
        <div class="form-group">
            <label for="postBody">Post</label>
            <textarea name="postBody" class="form-control" id="" cols="30" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </form>
<%- include('partials/footer'); -%>